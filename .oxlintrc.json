{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "ignorePatterns": ["node_modules", "dist", "docs"],
  "env": {
    "builtin": true,
    "browser": true
  },
  "categories": {
    "correctness": "error",
    "style": "error",
    "nursery": "error",
    "perf": "error",
    "suspicious": "error"
  },
  "rules": {
    "filename-case": "off",
    "func-style": [
      "error",
      "declaration",
      { "allowArrowFunctions": false, "allowFunctionExpressions": false }
    ],
    "prefer-object-assign": "off",
    "prefer-object-spread": "off",
    "sort-keys": "off",
    "no-continue": "off",
    "no-magic-numbers": "off",
    "init-declarations": "off",
    "no-explicit-any": "off",
    "no-null": "off",
    "max-params": ["error", 5],
    "id-length": "off",
    "no-empty-interface": "off"
  }
}
